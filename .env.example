# Configuration PostgreSQL
POSTGRES_USER=fred
POSTGRES_PASSWORD=VotreMotDePasseSecurise
POSTGRES_DB=erpbtp_clients

# Configuration Application
DB_USER=fred
DB_PASSWORD=VotreMotDePasseSecurise
DB_NAME=erpbtp_clients
DB_HOST=postgres
DB_PORT=5432

# Ports exposés
POSTGRES_PORT=5432
APP_PORT=8000

# ===== Configuration SSH pour déploiement distant =====
# (Nécessaire uniquement si l'application tourne sur Windows)

# Adresse du serveur Ubuntu distant (IP ou domaine)
REMOTE_SERVER=votre-serveur-ubuntu

# Utilisateur SSH
REMOTE_USER=ubuntu

# Chemin du script sur le serveur distant
REMOTE_SCRIPT_PATH=/home/ubuntu/create-client-stack.sh

# Clé SSH privée (optionnel, pour authentification par clé)
# Windows: C:\Users\VotreNom\.ssh\id_rsa
# Linux: /home/votreuser/.ssh/id_rsa
SSH_KEY_PATH=
